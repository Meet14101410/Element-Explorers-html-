<body>
  <main class="app">
    <h1>Element Explorers â€” click an element</h1>
    <div class="grid" id="grid"></div>
    <div id="detail"><em class="hint">Select an element to see details.</em></div>
  </main>

  <script>
    // Short element dataset (first 20 elements)
    const elements = [
      {sym:'H',name:'Hydrogen',z:1,fact:'Lightest element; fuel for stars.'},
      {sym:'He',name:'Helium',z:2,fact:'Second-most abundant in universe.'},
      {sym:'Li',name:'Lithium',z:3,fact:'Used in rechargeable batteries.'},
      {sym:'Be',name:'Beryllium',z:4,fact:'Aerospace alloys.'},
      {sym:'B',name:'Boron',z:5,fact:'Found in borax and detergents.'},
      {sym:'C',name:'Carbon',z:6,fact:'Basis of organic life.'},
      {sym:'N',name:'Nitrogen',z:7,fact:'Major part of air.'},
      {sym:'O',name:'Oxygen',z:8,fact:'Supports respiration.'},
      {sym:'F',name:'Fluorine',z:9,fact:'Most reactive element.'},
      {sym:'Ne',name:'Neon',z:10,fact:'Glows in neon signs.'},
      {sym:'Na',name:'Sodium',z:11,fact:'Common in salt.'},
      {sym:'Mg',name:'Magnesium',z:12,fact:'Light structural metal.'},
      {sym:'Al',name:'Aluminium',z:13,fact:'Widely used, corrosion-resistant.'},
      {sym:'Si',name:'Silicon',z:14,fact:'Semiconductors & sand.'},
      {sym:'P',name:'Phosphorus',z:15,fact:'Essential for DNA.'},
      {sym:'S',name:'Sulfur',z:16,fact:'Used in fertilizers.'},
      {sym:'Cl',name:'Chlorine',z:17,fact:'Disinfectant.'},
      {sym:'Ar',name:'Argon',z:18,fact:'Inert gas for lighting.'},
      {sym:'K',name:'Potassium',z:19,fact:'Important for cells.'},
      {sym:'Ca',name:'Calcium',z:20,fact:'Builds bones.'}
    ];

    const grid = document.getElementById('grid');
    const detail = document.getElementById('detail');

    elements.forEach(el=>{
      const d = document.createElement('button');
      d.className = 'card';
      d.innerHTML = `<strong>${el.sym}</strong><small>${el.z}</small>`;
      d.addEventListener('click', ()=> showDetail(el));
      grid.appendChild(d);
    });

    function showDetail(el){
      detail.innerHTML = `
        <strong>${el.name} (${el.sym}) â€” Z=${el.z}</strong>
        <p style="margin:8px 0 0">${el.fact}</p>
        <p style="margin:8px 0 0" class="hint">Try memorizing symbols â€” quiz will load on refresh.</p>
      `;
      // small animation
      detail.animate([{opacity:0},{opacity:1}],{duration:220});
    }

    // simple quiz on load (optional): press Q to start
    window.addEventListener('keydown', e=>{
      if(e.key.toLowerCase()==='q') startQuiz();
    });

    function startQuiz(){
      const idx = Math.floor(Math.random()*elements.length);
      const el = elements[idx];
      const ans = prompt(`What's the symbol for ${el.name}?`);
      if(ans===null) return;
      alert(ans.trim().toLowerCase()===el.sym.toLowerCase() ? 'Correct! ðŸŽ‰' : `Wrong â€” answer: ${el.sym}`);
    }
  </script>
</body>
